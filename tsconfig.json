{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES6",
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "__tests__"]
}
